Description: Stop ./configure --enable-debug/--disable-debug
 from changing CXXFLAGS, apart from prepending -g for --enable-debug.
Author: Andreas Metzler <ametzler@debian.org>
Origin: vendor
Forwarded: no
Last-Update: 2014-08-02

--- pfstools-1.8.5.orig/configure.ac
+++ pfstools-1.8.5/configure.ac
@@ -24,13 +24,10 @@ dnl
 AC_ARG_ENABLE(debug,
 		AS_HELP_STRING([--enable-debug],[Enable debug symbols and asserts]),
 		 [if test "$enable_debug" = "yes" ; then
-                     temp_CXXFLAGS=`echo $CXXFLAGS | sed "s/-O./ /; s/-g//"`
-		     CXXFLAGS="-g $temp_CXXFLAGS"
+		     CXXFLAGS="-g $CXXFLAGS"
 		     AC_DEFINE([DEBUG])
 		  fi],
                   [enable_debug="no"
-                     temp_CXXFLAGS=`echo $CXXFLAGS | sed "s/-O./ /; s/-g//"`
-   	             CXXFLAGS="-O3 $temp_CXXFLAGS"
                      AC_DEFINE(NDEBUG, 1, [Disable assertion checks])
                   ])
 
